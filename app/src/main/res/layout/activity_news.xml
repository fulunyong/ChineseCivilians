<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewsActivity">

    <LinearLayout
        android:id="@+id/line_title_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_news_entertainment"
            style="@style/title_item_fragment"
            android:text="@string/title_news_entertainment" />

        <TextView
            android:id="@+id/title_news_sports"
            style="@style/title_item_fragment"
            android:text="@string/title_news_sports" />

        <TextView
            android:id="@+id/title_news_anecdote"
            style="@style/title_item_fragment"
            android:text="@string/title_news_anecdote" />

        <TextView
            android:id="@+id/title_news_belle"
            style="@style/title_item_fragment"
            android:text="@string/title_news_belle" />

    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_news"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
